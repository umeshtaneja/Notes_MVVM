<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_margin="12dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/purple_200">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_note"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_launcher_background">

            </ImageView>

            <TextView
                android:id="@+id/tv_notes_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/iv_note"
                app:layout_constraintTop_toTopOf="@+id/iv_note"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="12dp"
                android:maxLines="1"
                android:textColor="#212121"
                android:textSize="16sp"
                tool:text="umesh" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="20dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/iv_share">

            </ImageView>

            <TextView
                android:id="@+id/tv_note_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/iv_note"
                app:layout_constraintTop_toBottomOf="@+id/tv_notes_title"
                app:layout_constraintBottom_toBottomOf="@id/iv_note"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="12dp"
                android:maxLines="2"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                tool:text="umesh" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>